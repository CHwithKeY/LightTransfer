<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <rotate android:fromDegrees="15" android:pivotX="0%" android:pivotY="0%">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorTestBackgroundPale" />
                    </shape>
                </rotate>
            </item>

            <item>
                <rotate android:fromDegrees="15" android:pivotX="-15%" android:pivotY="100%">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorTestBackgroundPale" />
                    </shape>
                </rotate>
            </item>

        </layer-list>

    </item>

</selector>