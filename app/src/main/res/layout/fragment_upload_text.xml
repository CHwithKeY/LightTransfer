<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/upload_text_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/nav_bg"
        android:layout_alignRight="@id/nav_bg">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/item_double_divider"
            android:layout_marginEnd="@dimen/item_five_time_divider"
            android:layout_marginLeft="@dimen/item_double_divider"
            android:layout_marginRight="@dimen/item_five_time_divider"
            android:layout_marginStart="@dimen/item_double_divider"
            android:layout_marginTop="@dimen/item_double_divider"
            android:layout_weight="1"
            android:background="@drawable/dw_transparent_square"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="@dimen/item_opf_divider"
            android:textSize="@dimen/text_middle_size" />

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:menu="@menu/upload_text_nav_items" />

    </android.support.v4.widget.DrawerLayout>

    <View
        android:id="@+id/nav_bg"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:elevation="5dp" />


