<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/upload_text_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/nav_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:background="@drawable/dw_transparent_square"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/item_opf_divider"
                android:paddingStart="@dimen/item_opf_divider"
                android:text="2018-03-31 00:57:25"
                android:textSize="@dimen/text_large_size" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/dw_transparent_square"
                android:gravity="start|top"
                android:inputType="textMultiLine"

                android:padding="@dimen/item_opf_divider"
                android:textSize="@dimen/text_middle_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dw_transparent_square"
                android:gravity="end|top"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/item_divider"
                    android:layout_marginStart="@dimen/item_divider"
                    android:drawablePadding="@dimen/item_half_divider"
                    android:drawableStart="@drawable/ic_upload_fullscreen"
                    android:gravity="center"
                    android:text="全屏" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/item_divider"
                    android:layout_marginStart="@dimen/item_divider"
                    android:drawablePadding="@dimen/item_half_divider"
                    android:drawableStart="@drawable/ic_upload_done"
                    android:gravity="center"
                    android:text="完成" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/item_double_divider"
                android:layout_weight="0.4"
                android:background="@drawable/dw_transparent_square"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/dw_transparent_square"
                    android:drawablePadding="@dimen/item_half_divider"
                    android:drawableStart="@drawable/ic_upload_draft"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/item_opf_divider"
                    android:paddingStart="@dimen/item_opf_divider"
                    android:text="草稿箱" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorLightGray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/item_double_divider"
                    android:background="@color/colorLandPale" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/item_double_divider"
                    android:background="@color/colorBlueDark" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/upload_image_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_main_image" />

            <ImageButton
                android:id="@+id/upload_file_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/upload_image_imgbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/item_double_divider"
                android:src="@drawable/ic_main_file" />

        </RelativeLayout>

        <!--<android.support.design.widget.NavigationView-->
        <!--android:id="@+id/nav_view"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="end"-->
        <!--app:menu="@menu/upload_text_nav_items" />-->

    </android.support.v4.widget.DrawerLayout>

    <View
        android:id="@+id/nav_bg"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:elevation="5dp" />

</RelativeLayout>