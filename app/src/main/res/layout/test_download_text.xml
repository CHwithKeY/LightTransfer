<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTestBackground" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@drawable/dw_circle_test_background_gray_gradient" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:rotation="180">

            <View
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:alpha="0.5"
                    android:background="@android:color/black" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/item_divider"
                    android:alpha="0.5"
                    android:background="@android:color/black" />

                <View
                    android:layout_width="230dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/item_divider"
                    android:alpha="0.5"
                    android:background="@android:color/black" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/item_divider"
                    android:alpha="0.5"
                    android:background="@android:color/black" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <android.support.v7.widget.RecyclerView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                tools:listitem="@layout/recycler_test_base_download_item" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-20dp"
                app:cardBackgroundColor="@color/colorTestBackgroundPale"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical">-->

                    <RelativeLayout
                        android:id="@+id/dt_printer_rl"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="250dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/dw_square_test_gray_assist" />

                        <TextView
                            android:id="@+id/dt_printer_ready_paper_tv"
                            android:layout_width="220dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/item_divider"
                            android:background="@android:color/white"
                            android:elevation="15dp" />

                        <View
                            android:layout_width="220dp"
                            android:layout_height="15dp"
                            android:layout_alignTop="@id/dt_printer_ready_paper_tv"
                            android:layout_centerHorizontal="true"
                            android:background="@color/colorTestAssist"
                            android:elevation="15dp" />

                        <View
                            android:layout_width="220dp"
                            android:layout_height="3dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/item_divider"
                            android:background="@android:color/black"
                            android:elevation="15dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_above="@id/dt_printer_rl"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/item_divider"
                        android:background="@color/colorTestAssist"
                        android:drawableStart="@drawable/ic_dt_printer_icon"
                        android:gravity="center"
                        android:text="Printer"
                        android:paddingStart="@dimen/item_divider"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <!--</LinearLayout>-->

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/item_double_divider"
                        android:background="@drawable/dw_circle_test_white_assist"
                        android:elevation="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_dt_printer_power_on" />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/item_three_time_divider"
                        android:layout_marginEnd="-15dp"
                        android:background="@drawable/dw_test_fillet_assist_none"
                        android:elevation="10dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/item_divider"
                        android:text="T  |"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="@dimen/item_double_divider"
                        android:background="@android:color/holo_red_light" />

                    <ImageButton
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="@dimen/item_double_divider"
                        android:background="@color/colorTestGreen" />

                    <!--<LinearLayout-->
                    <!--android:layout_width="250dp"-->
                    <!--android:layout_height="75dp"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:gravity="center_vertical">-->

                    <!--<ImageButton-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:background="@drawable/dw_circle_test_assist_white"-->
                    <!--android:elevation="10dp" />-->

                    <!--<ImageButton-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_marginStart="@dimen/item_double_divider"-->
                    <!--android:background="@drawable/dw_circle_test_assist_white"-->
                    <!--android:elevation="10dp" />-->

                    <!--</LinearLayout>-->

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>