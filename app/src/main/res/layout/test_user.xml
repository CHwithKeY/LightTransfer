<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTestBackground" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dw_trapezoidal_test_background_gray_gradient_reverse" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_double_divider"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="About Us"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_large_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dw_trapezoidal_test_background_pale_none_reverse" />

            <ImageView
                android:id="@+id/test_user_avatar_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/item_three_time_divider"
                android:layout_marginTop="@dimen/item_three_time_divider"
                android:background="@drawable/dw_circle_test_white_assist"
                android:elevation="15dp" />

            <View
                android:id="@+id/test_user_avatar_view"
                android:layout_width="5dp"
                android:layout_height="150dp"
                android:layout_below="@id/test_user_avatar_img"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-20dp"
                android:background="@color/colorTestAssist" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/test_user_avatar_view"
                android:layout_marginStart="60dp"
                android:background="@drawable/dw_circle_test_assist_none"
                android:elevation="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/item_double_divider"
                android:layout_marginEnd="-50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/item_double_divider"
                    android:layout_marginTop="@dimen/item_double_divider"
                    android:background="@drawable/dw_test_fillet_assist_none"
                    android:elevation="15dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/item_double_divider"
                    android:layout_marginTop="@dimen/item_double_divider"
                    android:background="@drawable/dw_test_fillet_assist_pale_none"
                    android:elevation="15dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/item_double_divider"
                    android:layout_marginTop="@dimen/item_double_divider"
                    android:background="@drawable/dw_test_fillet_assist_none"
                    android:elevation="15dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/item_double_divider"
                    android:layout_marginStart="@dimen/item_double_divider"
                    android:layout_marginTop="@dimen/item_double_divider"
                    android:background="@drawable/dw_test_fillet_assist_pale_none"
                    android:elevation="15dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>