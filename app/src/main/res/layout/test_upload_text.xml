<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTestBackground" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@drawable/dw_circle_test_background_gray_gradient" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/item_five_time_divider"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:fillViewport="true">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/item_half_divider"
                            android:background="@android:color/white"
                            android:focusable="false"
                            android:gravity="start|top"
                            android:hint="输入要上传的内容"
                            android:inputType="textMultiLine"
                            android:padding="@dimen/item_double_divider"
                            android:paddingBottom="@dimen/item_divider"
                            android:textSize="@dimen/text_middle_size" />

                    </ScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:clickable="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:clickable="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/item_divider"
                android:layout_marginStart="@dimen/item_divider"
                android:background="@color/colorTestAssist" />

            <ImageView
                android:id="@+id/ut_typewriter_screw_left_img"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/item_opf_divider"
                android:layout_marginTop="@dimen/item_divider"
                android:background="@android:color/darker_gray"
                android:scaleType="center"
                android:src="@drawable/ic_ut_typewritter_screw" />

            <View
                android:id="@+id/ut_typewriter_screw_left_line_view"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_alignTop="@id/ut_typewriter_screw_left_img"
                android:layout_marginStart="-10dp"
                android:layout_toEndOf="@id/ut_typewriter_screw_left_img"
                android:background="@android:color/darker_gray"
                android:rotation="135" />

            <View
                android:layout_width="50dp"
                android:layout_height="7dp"
                android:layout_marginStart="-15dp"
                android:layout_toEndOf="@id/ut_typewriter_screw_left_line_view"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/item_opf_divider"
                android:layout_marginTop="@dimen/item_divider"
                android:background="@android:color/darker_gray"
                android:scaleType="center"
                android:src="@drawable/ic_ut_typewritter_screw" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:clickable="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTestBackgroundPale" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/item_opf_divider"
                android:layout_marginStart="@dimen/item_opf_divider"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_double_divider"
                android:background="@drawable/dw_circle_test_assist_white"
                android:elevation="15dp"
                android:scaleType="center"
                android:src="@drawable/ic_main_lightning" />

            <TextView
                android:id="@+id/test_ut_review_imgbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_double_divider"
                android:background="@drawable/dw_circle_test_white_assist"
                android:elevation="15dp"
                android:gravity="center"
                android:text="V"
                android:textColor="@color/colorTestAssist"
                android:textSize="@dimen/text_xx_large_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test_ut_draft_imgbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_double_divider"
                android:layout_toEndOf="@id/test_ut_review_imgbtn"
                android:background="@drawable/dw_circle_test_white_assist"
                android:elevation="15dp"
                android:gravity="center"
                android:text="D"
                android:textColor="@color/colorTestAssist"
                android:textSize="@dimen/text_xx_large_size"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>