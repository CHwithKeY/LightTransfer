<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oji.kreate.lighttransfer.UserActivity">

    <View
        android:id="@+id/user_bg_fst_view"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="-75dp"
        android:alpha="0.25"
        android:background="@drawable/dw_semicircle_background_none"
        android:rotation="90" />

    <View
        android:id="@+id/user_bg_snd_view"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="-100dp"
        android:alpha="0.5"
        android:background="@drawable/dw_semicircle_background_none"
        android:rotation="90" />

    <View
        android:id="@+id/user_bg_thd_view"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="-125dp"
        android:alpha="0.75"
        android:background="@drawable/dw_semicircle_background_none"
        android:rotation="90" />

    <View
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="-150dp"
        android:background="@drawable/dw_semicircle_background_none"
        android:rotation="90" />

    <View
        android:layout_width="250dp"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-400dp"
        android:alpha="0.2"
        android:background="@drawable/dw_semicircle_background_none"
        android:rotation="90" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_five_time_divider"
        app:cardCornerRadius="@dimen/radius_normal_size"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/item_double_divider"
                android:layout_marginTop="@dimen/item_double_divider"
                android:src="@drawable/image_main_avatar_man" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/item_divider"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="@dimen/item_double_divider"
                    android:paddingStart="@dimen/item_double_divider"
                    android:text="修改密码"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/text_large_size" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/item_divider"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="@dimen/item_double_divider"
                    android:paddingStart="@dimen/item_double_divider"
                    android:text="修改状态"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_large_size" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/item_divider"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="@dimen/item_double_divider"
                    android:paddingStart="@dimen/item_double_divider"
                    android:text="升级会员"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/text_large_size" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/item_divider"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="@dimen/item_double_divider"
                    android:paddingStart="@dimen/item_double_divider"
                    android:text="查看"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_large_size" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/item_divider"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="@dimen/item_double_divider"
                    android:paddingStart="@dimen/item_double_divider"
                    android:text="退出登录"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/text_large_size" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_margin="@dimen/item_double_divider"-->
    <!--app:cardCornerRadius="@dimen/radius_normal_size"-->
    <!--app:cardElevation="7dp"-->
    <!--app:cardUseCompatPadding="true">-->


    <!--</android.support.v7.widget.CardView>-->


</RelativeLayout>
