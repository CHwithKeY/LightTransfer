<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include layout="@layout/item_dialog_title" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/item_three_time_divider"
            android:layout_marginStart="@dimen/item_three_time_divider"
            android:layout_marginTop="@dimen/item_five_time_divider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorAssist"
                    android:drawablePadding="@dimen/item_divider"
                    android:drawableStart="@drawable/ic_ut_dlg_review"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/item_double_divider"
                    android:paddingStart="@dimen/item_double_divider"
                    android:text="预览"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/text_large_size" />

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <EditText
                        android:id="@+id/dlg_ut_review_review_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:editable="false"
                        android:lineSpacingExtra="10dp"
                        android:padding="@dimen/item_double_divider"
                        android:textSize="@dimen/text_large_size" />

                </ScrollView>

                <!--</RelativeLayout>-->

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>