<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_opf_divider"
        android:text="上传"
        android:textSize="@dimen/text_large_size" />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/dw_land_circle" />

    <View
        android:id="@+id/main_scale_bg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/dw_assist_dark_circle" />

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/dw_assist_circle" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_download_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_main_cloud"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_upload_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_main_lightning"
        app:fabSize="normal" />

    <Button
        android:id="@+id/test_anim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test" />


</FrameLayout>