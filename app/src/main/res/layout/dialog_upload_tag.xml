    <android.support.v7.widget.CardView
        android:id="@+id/dlg_upload_tag_cv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/item_three_time_divider"
        android:layout_marginStart="@dimen/item_three_time_divider"
        android:layout_marginTop="@dimen/item_five_time_divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/item_double_divider">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dlg_upload_tag_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/dlg_upload_tag_tag_input_rl"
                android:layout_marginBottom="@dimen/item_divider"
                android:layout_marginTop="@dimen/item_divider"
                tools:listitem="@layout/recycler_base_download_tag" />

            <RelativeLayout
                android:id="@+id/dlg_upload_tag_tag_input_rl"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <include
                    android:id="@+id/dlg_upload_tag_edit_tag_et"
                    layout="@layout/item_input" />

                <ImageButton
                    android:id="@+id/dlg_upload_tag_confirm_imgbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@id/dlg_upload_tag_edit_tag_et"
                    android:layout_marginEnd="@dimen/item_divider"
                    android:background="@drawable/dw_circle_assist_none"
                    android:src="@drawable/ic_ut_utag_confirm" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

