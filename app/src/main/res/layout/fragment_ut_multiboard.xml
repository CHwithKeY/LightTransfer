<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/item_double_divider"
    android:layout_marginStart="@dimen/item_double_divider"
    app:cardCornerRadius="@dimen/radius_normal_size"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/fgm_ut_multiboard_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="5"
        android:padding="@dimen/item_divider" />

    <ImageButton
        android:id="@+id/fgm_ut_multiboard_imgbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/item_divider"
        android:background="@drawable/dw_circle_transparent_gray"
        android:elevation="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_ut_fgm_copy" />

</android.support.v7.widget.CardView>